<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="@dimen/_90sdp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_su">

        <View
            android:id="@+id/indicatorView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/indicator"
            app:layout_constraintStart_toStartOf="@id/rider_btn"
            app:layout_constraintTop_toTopOf="@id/rider_btn"
            app:layout_constraintBottom_toBottomOf="@id/rider_btn"
            app:layout_constraintEnd_toEndOf="@id/rider_btn" />

        <TextView
            android:id="@+id/rider_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rider"
            android:padding="@dimen/_8sdp"
            android:gravity="center"
            android:ems="7"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/driver_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/driver_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Driver"
            android:ems="7"
            android:padding="@dimen/_8sdp"
            android:gravity="center"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/rider_btn"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>